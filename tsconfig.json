{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": [
      "es2017",
      "es7",
      "es6",
      "es5",
      "dom"
    ],
    "allowJs": true,
    "jsx": "preserve",
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": false,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src"
  ]
}
